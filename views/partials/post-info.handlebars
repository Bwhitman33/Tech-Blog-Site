<article class="post">
  <div class="title">
    <h2>{{title}}</h2>
    <p>{{post_content}}</p>
    <p2> - {{user.username}}</p2>
  </div>
  <div class="meta">
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    <p3>posted on {{format_date created_at}}</p3>
  </div>
</article>